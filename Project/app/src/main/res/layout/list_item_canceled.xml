<!-- res/layout/list_item_book.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <!-- Existing layout content -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginEnd="10dp"
            android:src="@drawable/book_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="40px"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="A Journey of Imagination"/>

            <TextView
                android:id="@+id/textAuthorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6E7787"
                android:textSize="40px"
                android:layout_marginBottom="5dp"
                android:text="Alexander Hayes"/>

            <TextView
                android:id="@+id/textBorrowerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:textSize="40px"
                android:lineSpacingExtra="3dp"
                android:text="NguyenZuy"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textTimeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6E7787"
                android:textSize="40px"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="5dp"
                android:text="Start: 18/02/2023"/>

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1DD75B"
                android:textSize="40px"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="10dp"
                android:text="Remain: 3 Days"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Transparent overlay button -->
    <Button
        android:id="@+id/btnSelectCanceled"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

</FrameLayout>
